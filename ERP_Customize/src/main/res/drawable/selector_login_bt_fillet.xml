<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 表示已经选中 是一种状态 -->
    <item android:drawable="@drawable/shape_login_bt_press" android:state_checked="true"></item>
    <!-- 表示按下的动作 -->
    <item android:drawable="@drawable/shape_login_bt_press" android:state_pressed="true" />
    <!-- 表示选中的动作 -->
    <item android:drawable="@drawable/shape_login_bt_press" android:state_selected="true"></item>
    <!-- 获得焦点 是一种状态 -->
    <item android:drawable="@drawable/shape_login_bt_press" android:state_focused="true"></item>

    <item android:drawable="@drawable/shape_login_bt_release" />
</selector>